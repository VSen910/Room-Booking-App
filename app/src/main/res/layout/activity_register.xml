<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/gradient">


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="125dp"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:fontFamily="@font/montserrat_regular"/>

    <EditText
        android:id="@+id/emailbox"
        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:background="@drawable/edittext_design"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailbox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="35dp"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:fontFamily="@font/montserrat_regular"/>

    <EditText
        android:id="@+id/passwordbox"
        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:background="@drawable/edittext_design"
        android:inputType="textPassword"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/cpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordbox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="35dp"
        android:text="Confirm Password"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:fontFamily="@font/montserrat_regular"/>

    <EditText
        android:id="@+id/cpbox"
        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_below="@+id/cpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:background="@drawable/edittext_design"
        android:inputType="textPassword"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_2"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/cpbox"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        style="@style/Widget.Material3.Button"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:text="REGISTER"
        android:textColor="@color/primary"
        android:textSize="22sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_2"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/register_2"
        android:layout_centerInParent="true"
        android:layout_marginTop="22dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:strokeColor="@color/black"
        android:fontFamily="@font/montserrat_regular"
        android:text="CANCEL"
        android:textColor="@color/white"
        android:textSize="22sp" />




</RelativeLayout>