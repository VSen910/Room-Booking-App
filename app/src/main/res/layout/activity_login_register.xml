<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginRegisterActivity"
    android:background="@drawable/gradient"
    >

    <TextView
        android:id="@+id/heyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="60dp"
        android:text="Hey"
        android:textColor="@color/white"
        android:textSize="64sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_medium"/>

    <TextView
        android:id="@+id/thereTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heyTxt"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-10dp"
        android:text="There! ðŸ‘‹"
        android:textColor="@color/white"
        android:textSize="64sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_medium"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thereTxt"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="Wanna book
        classrooms in IIIT
        Dharwad?"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/opensans_regular"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_1"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_below="@+id/register_1"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:strokeColor="@color/black"
        android:fontFamily="@font/opensans_regular"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_1"
        style="@style/Widget.Material3.Button"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="490dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/opensans_regular"
        android:text="REGISTER"
        android:textColor="@color/primary"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oh, so you're an admin?"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/opensans_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/click_here"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="@font/opensans_regular"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>


</RelativeLayout>