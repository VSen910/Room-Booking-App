<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/history_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/opensans_bold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Palash Bhasme"
                android:textColor="@color/primary"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/history_profession"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/history_name"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/opensans_regular"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Student"
                android:textColor="@color/primary"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/history_room_no"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="C202"
                android:textColor="@color/primary"
                android:textSize="38sp" />

            <TextView
                android:id="@+id/history_date"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_room_no"
                android:layout_marginStart="200dp"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="9/7/2022"
                android:textColor="@color/primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/history_time"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/history_date"
                android:layout_marginStart="200dp"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingTop="3dp"
                android:paddingEnd="20dp"
                android:text="10 -11AM"
                android:textColor="@color/primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/history_status"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_profession"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/opensans_bold"
                android:paddingStart="8dp"
                android:text="ACCEPTED"
                android:textColor="@color/primary"
                android:textSize="14sp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>